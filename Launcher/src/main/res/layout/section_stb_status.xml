<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp">
    <com.inucreative.sednlauncher.CustomView.ASTextView
        android:id="@+id/tvStatusColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="100%"
        android:background="@drawable/stb_bg3"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:textSizePercent="50"
        android:text="STB"/>
    <com.inucreative.sednlauncher.CustomView.ASTextView
        android:id="@+id/tvStatusText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="42.5%"
        app:layout_marginLeftPercent="52%"
        app:layout_marginTopPercent="7%"
        android:textColor="@color/white"/>
    <com.inucreative.sednlauncher.CustomView.ASTextView
        android:id="@+id/tvStorageUsage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="42.5%"
        app:layout_marginLeftPercent="52%"
        app:layout_marginTopPercent="50%"
        android:layout_below="@id/tvGroupName"
        android:layout_alignLeft="@id/tvGroupName"
        android:textColor="@color/white"/>
</android.support.percent.PercentRelativeLayout>