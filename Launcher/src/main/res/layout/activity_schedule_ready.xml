<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.inucreative.sednlauncher.Activity.ScheduleReadyActivity">

    <ImageView
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270px"
        android:background="@drawable/circle"/>
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="190px"
        android:layout_height="190px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285px"
        android:gravity="center"
        android:textAlignment="center"
        android:text="5"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="170px"/>
    
    <TextView
        android:layout_width="1000px"
        android:layout_height="170px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620px"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="100px"
        android:text="@string/str_player_ready"/>
</RelativeLayout>
