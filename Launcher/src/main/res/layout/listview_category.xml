<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:focusable="true"
    android:clickable="true">
    <com.inucreative.sednlauncher.CustomView.ASTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="100%"
        android:gravity="center"
        android:duplicateParentState="true"
        app:textSizePercent="40"
        android:textColor="@color/selector_text"
        />
    <ImageView
        android:id="@+id/ivBoomarked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="7.1%"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@drawable/icon_bookmark_tab"/>
    <ImageView
        android:id="@+id/ivDownloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="2.8%"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@drawable/icon_download_tab"/>
</android.support.percent.PercentRelativeLayout>